---
type inputType = "text" | "email"

interface Props {
  type: inputType;
  inputName: string;
  placeholder: string;
}

const { type, inputName, placeholder } = Astro.props;
---
<div class="inputContainer">
  <label for={inputName}>{inputName}</label>
  <input type={type} name={inputName} id={inputName} placeholder={placeholder} id={inputName}/>
</div>
<style>
  .inputContainer {
    display: flex;
    flex-direction: column;
    align-items: start;
    gap: 0.2rem;
  }

  input {
    all: unset;
    font-family: Inter;
    border: 1px solid #D2D6DA;
    border-radius: 8px;
    text-align: start;
    padding-left: 10px;
    width: 100%;
    height: 30px;
    font-size: 14px; /* Cambié font-weight a font-size */
    font-weight: 400;
    line-height: 30px; /* Alineado con la altura del input */
    transition: border-color 0.2s ease-in; /* Aplicar transición solo a border-color */
  }

  input:focus {
    border-color: var(--main-color); /* Cambiar el color del borde en focus */
  }

  .error {
    border-color: red;
  }

  @media (min-width: 1200px) {
    .inputContainer {
      width: 100%;
      font-size: 50px;
    }
  }
</style>