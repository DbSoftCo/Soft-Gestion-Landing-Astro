---
import BadgeGroup from '../molecules/BadgeGroup.astro'
import ButtonGroup from '../molecules/ButtonGroup.astro'


interface Props {
  headerText: string;
  text: string;
}

const { headerText, text } = Astro.props
---

<div>
  <BadgeGroup />
  <h2>{headerText}</h2>
  <p>{text}</p>
  <ButtonGroup />
  <div class="imageContainer">
    <img src="./macbook.svg" alt="macbook 16 image">
  </div>
</div>
<style>
  div{
    display: flex;
    flex-direction: column;
    align-items:center;
    justify-content:center;
    gap: 16px;
    padding: 64px 16px 64px 16px;
  }
</style>