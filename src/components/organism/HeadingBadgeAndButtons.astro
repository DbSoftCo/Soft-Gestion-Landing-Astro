---
import { Image } from 'astro:assets';
import SectionsContainer from '../atoms/SectionsContainer.astro';
import ButtonGroup from '../molecules/ButtonGroup.astro'
import MacBook from "@/assets/macbook.svg"


interface Props {
  headerText: string;
  text: string;
}

const { headerText, text } = Astro.props
---

<div class="md:mt-10">
  <div class="md:px-4 flex flex-col items-center gap-12 overflow-hidden">
    <h1 class="font-bold text-2xl md:text-6xl text-center xl:w-[60vw]">{headerText}</h1>
    <p class=" md:text-base xl:w-[50vw]">{text}</p>
    <ButtonGroup />
    <div class="h-fit mb-6">
      <Image src={MacBook} alt="mackbook with dashboard" class=""/>
    </div>
  </div>
</div>