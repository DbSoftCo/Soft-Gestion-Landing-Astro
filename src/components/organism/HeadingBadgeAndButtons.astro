---
import { Image } from 'astro:assets';
import ButtonGroup from '../molecules/ButtonGroup.astro'
import MacBook from "@/assets/macbook.webp"


interface Props {
  headerText: string;
  text: string;
  secondHeaderText: string
}

const { headerText, secondHeaderText, text } = Astro.props
---

<div class="md:mt-10">
  <div class="md:px-4 flex flex-col items-center gap-12 overflow-hidden">
    <div>
      <h1 class="text-xl font-bold md:text-3xl text-center lg:w-[60vw]">{headerText}</h1>
      <h2 class="text-primary font-bold text-2xl md:text-5xl text-center lg:w-[60vw]">{secondHeaderText}</h2>
    </div>
    <p class=" md:text-base lg:w-[50vw]">{text}</p>
    <!-- <ButtonGroup /> -->
    <div class="h-fit mb-6">
      <Image src={MacBook} alt="mackbook with dashboard" class=""/>
    </div>
  </div>
</div>