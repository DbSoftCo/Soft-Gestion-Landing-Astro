---
import SectionsContainer from '../atoms/SectionsContainer.astro';
import BadgeGroup from '../molecules/BadgeGroup.astro'
import ButtonGroup from '../molecules/ButtonGroup.astro'


interface Props {
  headerText: string;
  text: string;
}

const { headerText, text } = Astro.props
---

<SectionsContainer>
  <BadgeGroup />
  <h2>{headerText}</h2>
  <p>{text}</p>
  <ButtonGroup />
  <div class="imageContainer">
    <img src="./macbook.svg" alt="macbook 16 image">
  </div>
</SectionsContainer>