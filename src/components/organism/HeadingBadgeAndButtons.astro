---
import { Image } from 'astro:assets';
import SectionsContainer from '../atoms/SectionsContainer.astro';
import ButtonGroup from '../molecules/ButtonGroup.astro'
import MacBook from "@assets/macbook.svg"


interface Props {
  headerText: string;
  text: string;
}

const { headerText, text } = Astro.props
---

<div class="sectionContainer">
  <div class="contentContainer">
    <h2>{headerText}</h2>
    <p>{text}</p>
    <ButtonGroup />
    <div class="imageContainer">
      <Image src={MacBook} alt="mackbook with dashboard" class="macbook"/>
    </div>
  </div>
</div>
<style>
  .sectionContainer {
    padding: 64px 0px 64px 0px;
    max-height: 800px;
    overflow: hidden;
  }

  .contentContainer {
    padding: 0 16px 0 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 48px;
    overflow: hidden;
  }
  
  @media (min-width: 1200px) {
    .macbook {
      width: 70vw;
      height: 1200px;
      position: relative;
      top: -250px;
    }

    h2 {
      width: 60vw;
      line-height: 72px;
    }

    p {
      width: 50vw;
    }
  }
</style>