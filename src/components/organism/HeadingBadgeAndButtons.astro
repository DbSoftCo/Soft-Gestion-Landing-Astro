---
import SectionsContainer from '../atoms/SectionsContainer.astro';
import BadgeGroup from '../molecules/BadgeGroup.astro'
import ButtonGroup from '../molecules/ButtonGroup.astro'


interface Props {
  headerText: string;
  text: string;
}

const { headerText, text } = Astro.props
---

<SectionsContainer>
  <BadgeGroup />
  <h2>{headerText}</h2>
  <p>{text}</p>
  <ButtonGroup />
  <div class="imageContainer">
    <img src="./macbook.svg" class="macbook" alt="macbook 16 image">
  </div>
</SectionsContainer>
<style>
  @media (min-width: 1200px) {
    .macbook {
      width: 70vw;
    }

    h2 {
      width: 60vw;
      line-height: 72px;
    }

    p {
      width: 50vw;
    }
  }
</style>