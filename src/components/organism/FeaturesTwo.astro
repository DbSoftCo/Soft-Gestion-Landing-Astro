---
import SectionsContainer from "../atoms/SectionsContainer.astro";
import FeatureCard from "../molecules/FeatureCard.astro";
import SectionHeader from "../molecules/SectionHeader.astro";
import { featuresData2 } from "./featuresData";
---
<SectionsContainer>
  <div class="featureTitle">
    <SectionHeader
			heading="Analytics that feels like itâ€™s from the future"
			subheading="Features"
			text="Powerful, self-serve product and growth analytics to help you convert, engage, and retain more users. Trusted by over 4,000 startups."
		/>
  </div>
  <div class="imgContainer">
    <img src="./iphone.svg" alt="iphone">
  </div>
  <div class="featuresContainer">
    { featuresData2.map((data) => {
        return <FeatureCard 
          iconName={data.iconName}
          featureTitle={data.featureTitle}
          text={data.text}
        />
      })
    }
  </div>
</SectionsContainer>
<style>
  .imgContainer {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-left: 1.5rem;
  }

  .featuresContainer {
    padding: 0px 16px 0px 16px;
    position: sticky;
    top: 0;
    display: flex;
    flex-direction: column;
    gap: 40px;
  }
</style>