---
import SectionsContainer from "../atoms/SectionsContainer.astro";
import FeatureCard from "../molecules/FeatureCard.astro";
import SectionHeader from "../molecules/SectionHeader.astro";
import { featuresData2 } from "./featuresData";
---
<SectionsContainer>
  <div class="featureTitle">
    <SectionHeader
			heading="Potencia tu proyecto con la innovaciÃ³n total de nuestro sistema"
			subheading="Que ofrecemos?"
			text="Te ayudamos a mantener la gestion total de tu empresa, desde la gestion de proyectos, hasta todo lo relacionado con la administracion de RRHH, controlalos gastos de tu empresa y factura de manera segura!"
		/>
  </div>
  <div class="imgContainer">
    <img src="./iphone.svg" alt="iphone">
  </div>
  <div class="featuresContainer">
    { featuresData2.map((data) => {
        return <FeatureCard
          iconName={data.iconName}
          featureTitle={data.featureTitle}
          text={data.text}
        />
      })
    }
  </div>
</SectionsContainer>
<style>
  .imgContainer {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-left: 1.5rem;
  }

  .featuresContainer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 40px;
  }

  @media (min-width: 768px) {
    .featuresContainer {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      gap: 80px;
    }
  }

  @media (min-width: 1200px) {
    .featuresContainer {
      display: flex;
      flex-direction: row;
      justify-content: center;
      flex-wrap: wrap;
      gap: 50px;
    }
  }
</style>