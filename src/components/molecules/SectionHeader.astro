---
interface Props {
  heading: string;
  subheading: string;
  text: string;
}
import { Badge } from "@/components/ui/badge"
const { heading, subheading, text } = Astro.props;
---

<div class="flex flex-col gap-4 items-center justify-center md:gap-8">
  <Badge className="px-3 cursor-default text-base">{subheading}</Badge>
  <h3 class="font-semibold text-2xl md:text-4xl">{heading}</h3>
  <p class="text-center xl:w-[50vw]">{text} + asd</p>
</div>
