---
import Button from '../atoms/Button.astro'
import Icons from '../atoms/Icons.astro';
---

<div class="buttonGroup">
  <Button variant='main' text='Organizar encuentro'/>
  <Button variant='secondary' text='Demo'>
    <Icons iconName="carbon:play-outline" variant="demo"/>
  </Button>
</div>
<style>
  .buttonGroup {
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: space-between;
    gap: 1.5rem;
    width: 100%;
  }

  @media (min-width: 1200px) {
    .buttonGroup {
      flex-direction: row-reverse;
      justify-content: center;
      gap: 12px;
    }
  }
</style>