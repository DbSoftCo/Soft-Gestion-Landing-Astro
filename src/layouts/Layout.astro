--- 
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--main-color: #3EA2D0;
  	--secondary-color: #99F1FB;
  	--tertiary-color: #DDFEFD;
	}
	html {
		font-family: Inter, sans-serif;
	}

	h2 {
		font-weight: bold;
		font-size: 36px;
		line-height: 44px;
		text-align: center;
		margin: 0;
	}

	p {
		font-size: 18px;
		line-height: 28px;
		text-align: center;
		color: #667085;
	}
</style>
