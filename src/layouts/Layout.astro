--- 
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--main-color: #3EA2D0;
  	--secondary-color: #99F1FB;
  	--tertiary-color: #DDFEFD;

		--h2-size: 36px;
		--h3-size: 30px;
		--h4-size: 18px;
		--h5-size: 14px;

		--p-size: 18px;
		--p-color: #667085;
	}

	* {
		text-align: center;
		margin: 0;
	}

	html {
		font-family: Inter, sans-serif;
	}

	p {
		font-size: 18px;
		line-height: 28px;
		text-align: center;
	}

	h2 {
		font-size: var(--h2-size);
		font-weight: bold;
		line-height: 44px;
		margin: 0;
		height: auto;
	}

	h3 {
		font-size: var(--h3-size);
		font-weight: bold;
		line-height: 38px;
	}

	h4 {
		font-size: var(--h4-size);
		font-weight: bold;
		line-height: 28px;
	}

	h5 {
		font-size: var(--h5-size);
		font-weight: bold;
		color: var(--main-color);
		line-height: 20px;
	}

	p {
		font-size: var(--p-size);
		color: var(--p-color);
		line-height: 28px;
	}
</style>
